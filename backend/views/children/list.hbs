<h2>Children list</h2>
<ul>
    {{#each childrenList}}
        <li>
            <form action="/child/gift/{{this.id}}?_method=PATCH" method="POST">
                <label>
                    {{this.name}}
                    <select name="giftId">
                        <option value="">Empty</option>
                        {{#each ../giftsList}}
                            <option value="{{this.id}}" {{#if (equals this.id ../giftId)}}selected="selected"{{/if}}>{{this.name}}</option>
                        {{/each}}
                    </select>
                </label>
                <button>SAVE</button>
            </form>
        </li>
    {{/each}}
</ul>

<h2>Add child to Santa's list</h2>
<form action="/child" method="POST">
    <label>
        Name:
        <input name="name" type="text">
    </label>
    <button>ADD</button>

</form>